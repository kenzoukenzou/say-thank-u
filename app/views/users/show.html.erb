<div class="prof-wrp">
	<!-- <img src="<%= "/user_images/#{@user.image_name}" %>"> -->
	<% if @user.image.attached? %>
		<%= image_tag @user.image %>
	<% else %>
		<img src="/cat.jpg">
	<% end %>
	<h4 class="sh-name">
		<% if @current_user.id == @user.id %>
			<a href="<%= "/users/#{@user.id}/edit" %>"><%= @user.name %> <i class="fas fa-edit"></i></a>
			<%= link_to "退会する", user_path(@user.id), method: :delete,data: { confirm: '本当に削除して良いですか？' } %>
		<% else %>
			<%= @user.name %>
		<% end %>
	</h4>
</div>
<div class="timeline-wrp top-zero">
	<% @user.posts.each do |post| %>
	<div class="timeline-item">
		<div class="timeline-item-img">
			<%= image_tag @user.image %>
		</div>
		<div class="timeline-item-content">
			<div class="us-name">
				<%= link_to(post.user.name, "/users/#{post.user.id}") %>
			</div>
			<p><%= post.content %></p>
		</div>
	</div>
	<% end %>
</div>