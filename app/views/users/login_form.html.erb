<div class="form-wrp">
	<div class="form login">
       <% if @error %>
          <div class="form-error">
            <%= @error %>
          </div>
        <% end %> 
		<%= form_tag("/login") do %>
			<p>メールアドレス</p>
			<input name="email" value="<%= @email %>">
			<p>パスワード</p>
			<input name="password" type="password" value="<%= @password %>">
			<input type="submit" value="ログイン">
		<% end %>
	</div>
</div>